<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">


    <View
        android:id="@+id/viewAboutBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighpurple"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="-16dp" />

    <View
        android:id="@+id/barAboutRadius"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_buttom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/barraAux"
        app:layout_constraintBottom_toBottomOf="@id/barAboutRadius"
        app:layout_constraintEnd_toEndOf="@id/barAboutRadius"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/barAboutRadius"
        app:layout_constraintTop_toTopOf="@id/barAboutRadius"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/title_about"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/StrgAbout"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/barAboutRadius"
        app:layout_constraintEnd_toEndOf="@+id/barAboutRadius"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/barAboutRadius"
        app:layout_constraintTop_toTopOf="@+id/barAboutRadius" />

    <View
        android:id="@+id/textViewAbout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="150dp"
        app:layout_constraintTop_toBottomOf="@+id/barAboutRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_buttom"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:layout_constraintTop_toTopOf="@id/textViewAbout"
        app:layout_constraintBottom_toBottomOf="@id/textViewAbout"
        app:layout_constraintLeft_toLeftOf="@id/textViewAbout"
        app:layout_constraintRight_toRightOf="@+id/textViewAbout"
        android:textColor="@color/white"
        android:text="@string/textAbout"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>